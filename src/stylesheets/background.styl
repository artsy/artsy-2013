@import '../../node_modules/nib'
@import 'lib'

img-margin = 40px
caption-margin = 10px
gray-color = #999

#background
  padding 50px
  padding-bottom 0
  z-index -2
  clearfix()
  > ul
    float right
    width background-width
  img
    background black

#background-content li
  img
    width 100%
    margin-bottom img-margin
    display block
  figure
    margin 0 0 img-margin 0
    img
      margin-bottom caption-margin
    figcaption
      font-style italic
      position relative
      line-height 18px
      margin-top 15px
      clearfix()
    .main
      width 65%
      float left
    .source
      width 35%
      color #666
      font-size 15px
      font-style italic
      float right
      text-align right
    a.source
      z-index 4
      text-decoration none
      position absolute
      right 0
      &:before
        opacity 0.5

.two-column-images
  width 50%
  display inline-block
  vertical-align top
  &.two-column-left
    padding-right 10px
    float left
  &.two-column-right
    padding-left 10px
  li
    margin-bottom img-margin
    display inline-block
  img
    margin-bottom caption-margin !important
  p, em
    display block
    margin 0
    color gray-color
    line-height 1.2em
    font-size default-font-size - 2
  em
    font-style italic
    span
      font-style normal

#background-code
  font-family "Courier New", Courier, monospace
  position relative
  overflow hidden
  line-height 1em
  font-size 13px
  pre
    padding-left 15%

#background-code-mask
  position absolute
  top 0
  right 0
  width 100%
  border-bottom 5px solid black
  background transparent !important

.artist-info
  color gray-color

.phone-foreground-container
  display none

#graph-wrapper
  position absolute
  top 35px
  h4
    font-size 28px
    margin-bottom 20px
    margin-top 10px
#graph, #graph-wrapper
  width 100%

#graph-container
  position relative

#iphone-screens img
  margin 0
  display block

.may-images
  li
    margin-bottom 20px
    display block
  img
    margin 0 !important
    display block