#footer
  position relative
  background-size cover

#footer-bg-image
  width 100%
  display block

#footer-social-buttons
  position absolute
  bottom 50px
  text-align center
  width 100%
  z-index 2
  button
    display inline-block
  h4
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 20px

#footer-header
  text-align center
  position absolute
  bottom 400px
  margin-top -40px
  font-size foreground-header-font-size
  display block
  width 100%
  z-index 2

#footer-links
  text-align center
  display block
  width 100%
  bottom 200px
  position absolute
  font-size 26px
  line-height 1.4em
  z-index 2
  a
    display block
    text-decoration none
    color white
    cursor pointer
    z-index 2
    &:hover, &:active, &:focus
      text-decoration underline

.social-button-container
  position relative
  width 80px
  height @width
  vertical-align top
  display inline-block
  small
    display block
    position absolute
    bottom -32px
    left -4px
    display none
    text-align center
    width 100%
  a
    display block
    position absolute
    bottom 0
    right 0
    margin-right 20px