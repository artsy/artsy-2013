//
// Styles for loading spinners of all varieties.
//

@keyframes spin
  0%
    transform rotate(0deg)
    animation-timing-function linear
  50%
    transform rotate(180deg)
    animation-timing-function linear
  100%
    transform rotate(360deg)
    animation-timing-function linear

spinner(width=25px, height=6px, color=#000)
  background color
  width width
  height height
  position absolute
  animation spin 1s infinite

.loading-spinner
  spinner(30px, 6px)