@import 'lib'
@import '../../node_modules/nib'

#main-header
  width 100%
  min-height 300px
  position relative
  margin-bottom 100px
  position relative
  #logo
    background url('images/logo.svg') center center no-repeat
    background-size contain
    width 150px
    height 60px
    position absolute
    left foreground-padding
    top @left
  #main-header-hgroup
    position absolute
    bottom 30%
    left foreground-padding
  h1
    font-size 54px
    line-height 1em
  h2
    avant-garde()
    margin-bottom 15px

#main-header-down-arrow
  background center center no-repeat url('images/down-arrow.svg')
  width 100%
  height 80px
  margin auto
  position absolute
  bottom 0
  cursor pointer
  border 0
  z-index 2