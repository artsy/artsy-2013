@import 'lib'
@import '../../node_modules/nib'

#header-background
  position absolute
  width 100%
  #header-background-gradient
    content '.'
    color 'transparent'
    background linear-gradient(top, transparent, black)
    position absolute
    bottom 0
    width 100%
    height 40%
    opacity 0
  li
    position absolute
    top 0
    left 0
    background center center no-repeat
    background-size cover
    z-index -1
    width 100%
    height 100%
    opacity 0
    transition opacity 1s ease-in-out
    transform translate3d(0,0,0)
    &.active
      opacity 1

#main-header
  width 100%
  height 100%
  position relative

#main-header-logo
  opacity 0
  background url('images/header-logo.svg') center center no-repeat
  background-size contain
  top 50%
  height 16%
  margin-left 20px
  width calc(100% - 40px)
  position absolute
  margin-top -(@height / 2)
  transition opacity 0s
  &.active
    opacity 1
    transition opacity 0.5s ease-in

#main-header-down-arrow
  background center center no-repeat url('images/down-arrow.svg')
  width 100%
  height 80px
  margin auto
  position absolute
  bottom 0
  cursor pointer
  border 0
  z-index 2