@import 'lib'

#foreground
  position absolute
  width 100%
  z-index 2

#foreground li
  padding foreground-padding
  height 100%
  width 100%
  position absolute
  opacity 0
  &:first-child
    opacity 1

  header, footer
    width 40%
    padding-top 20px
    border-top 2px solid
    position absolute

  header
    top foreground-padding
    h1
      font-size foreground-header-font-size
      line-height 1em

  footer
    bottom foreground-padding
    font-size 22px
    line-height 1.2em

  small
    display block
    margin-top 20px
    font-size 18px

#foreground-gradient
  background linear-gradient(top, transparent, black)
  width 100%
  height 40%
  bottom 0
  position absolute
  left 0