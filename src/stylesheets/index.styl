@import '../../node_modules/nib'
@import 'foreground'
@import 'background'
@import 'header'
@import 'iscroll'
@import 'social'
@import 'footer'
@import 'phone'

global-reset()

body
  background black
  color white
  garamond()
  line-height 1.4em
  font-size default-font-size

*
  box-sizing border-box

button, a
  outline none
  color white

#content
  position relative

.faux-underline
  &
    display: inline
    position: relative
    text-decoration: none
  &:before
    content: ''
    position: absolute
    left: 0
    display: inline-block
    height: 1em
    width: 100%
    margin-top: 0.15em
    border-bottom: 1px solid #777
    color: rgb(80, 80, 80)
  &:hover
    text-decoration: none

.iScrollIndicator
  border 1px solid #999 !important

@font-face
  font-family 'AvantGardeGothicITCW01D 731075'
  font-weight normal
  font-style normal
  src url("fonts/c18aee57-7585-4a8b-9a1c-69d226301d73.woff") format("woff")