#foreground-social-buttons
  position absolute
  right foreground-padding
  bottom foreground-padding

.social-button-facebook
.social-button-twitter
  padding 25px
  background transparent
  background no-repeat center center
  background-size 40%
  font-size 0
  cursor pointer
  display inline-block
  position relative
  &::after
    content '.'
    color transparent
    border 2px solid white
    border-radius 50px
    width 100%
    height 100%
    position absolute
    top -1px
    left -1px
    transition all 0.15s ease-out
  &:hover, &:focus, &:active
    &::after
      transform scale(1.1)

.social-button-facebook
  margin-right 20px
  background-image url(images/facebook.svg)

.social-button-twitter
  background-image url(images/twitter.svg)