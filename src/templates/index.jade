doctype html
html(lang="en")
  head
    title Artsy 2013 Annual Review
    meta( name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" )
    meta( property="og:image" content="http://2013.artsy.net/images/fb-thumb.jpg" )
    link( type='text/css', rel='stylesheet', href=('index.css') )
  body
    #wrapper
      #scroller
        #header-background
          #header-background-gradient
          ul
        header#main-header.viewport-height
          #main-header-logo
          #main-header-down-arrow
        main#content
          include content
        footer#footer.viewport-height( style="background-image: url('images/footer/1.jpg')" )
          include footer
    #scripts
      include scripts
      script( src='index.js' )